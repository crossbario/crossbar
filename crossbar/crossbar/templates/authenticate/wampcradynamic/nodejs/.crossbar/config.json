{
   "controller": {
   },
   "workers": [
      {
         "type": "router",
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "authenticator",
                     "permissions": [
                        {
                           "uri": "com.example.authenticate",
                           "register": true
                        }
                     ]
                  },
                  {
                     "name": "backend",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "subscribe": false
                        }
                     ]
                  },
                  {
                     "name": "frontend",
                     "permissions": [
                        {
                           "uri": "com.example.add2",
                           "call": true
                        },
                        {
                           "uri": "com.example.*",
                           "publish": true
                        },
                        {
                           "uri": "com.example.topic2",
                           "publish": false
                        },
                        {
                           "uri": "com.foobar.topic1",
                           "publish": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": "../web"
                  },
                  "ws": {
                     "type": "websocket",
                     "auth": {
                        "wampcra": {
                           "type": "dynamic",
                           "authenticator": "com.example.authenticate"
                        }
                     }
                  }
               }
            }
         ]
      },
      {
         "type": "guest",
         "executable": "/usr/bin/node",
         "arguments": ["authenticator.js"],
         "options": {
            "workdir": "..",
            "env": {
               "vars": {
                  "NODE_PATH": "/usr/local/lib/node_modules"
               }
            }
         }
      }
   ]
}
