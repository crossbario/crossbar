{
   "processes": [
      {
         "type": "router",
         "options": {
            "classpaths": [".."]
         },
         "realms": {
            "realm1": {
               "permissions": {
                  "anonymous": {
                     "create": true,
                     "join": true,
                     "access": {
                        "*": {
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     }
                  }
               },
               "classes": [
                  "timeservice.TimeService"
               ]
            }
         },
         "transports": [
            {
               "type": "web",
               "endpoint": "tcp:8080",
               "paths": {
                  "/": {
                     "type": "static",
                     "directory": ".."
                  },
                  "ws": {
                     "type": "websocket",
                     "url": "ws://localhost:8080/ws",
                     "cookie": {},
                     "auth": {
                        "mozilla_persona": {
                           "role": {
                              "type": "static",
                              "value": "com.myapp.user"
                           }
                        }
                     }
                  }
               },
               "options": {
                  "enable_directory_listing": true
               }
            }
         ]
      }
   ]
}
