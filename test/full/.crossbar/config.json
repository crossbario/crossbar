{
    "version": 2,
    "controller": {
        "id": "mynode1",
        "options": {
            "title": "Kernreaktor 7",
            "shutdown": ["shutdown_on_last_worker_exit"]
        },
        "manhole": {
            "endpoint": {
                "type": "tcp",
                "port": 6022,
                "tls": {
                    "certificate": "server.crt",
                    "key": "server.key",
                    "dhparam": "dhparam.pem",
                    "ca_certificates": [
                        "intermediate.cert.pem",
                        "ca.cert.pem"
                    ]
                }
            },
            "users": [
                {
                    "user": "crossbar",
                    "password": "crossbar"
                }
            ]
        },
        "connections": [
            {
                "type": "postgres",
                "host": "localhost",
                "port": 5432,
                "database": "postgres",
                "user": "postgres",
                "password": "postgres",
                "options": {
                    "min_connections": 5,
                    "max_connections": 20
                }
            }
        ]
    },
    "workers": [
        {
            "id": "wstestee1",
            "type": "websocket-testee",
            "transport": {
                "type": "websocket",
                "endpoint": {
                    "type": "tcp",
                    "interface": "127.0.0.1",
                    "port": 9000,
                    "shared": true,
                    "backlog": 500
                }
            },
            "options": {
                "title": "Crossbar.io WebSocket Testee 1/2",
                "cpu_affinity": [0]
            }
        },
        {
            "id": "wstestee2",
            "type": "websocket-testee",
            "transport": {
                "type": "websocket",
                "endpoint": {
                    "type": "tcp",
                    "interface": "127.0.0.1",
                    "port": 9000,
                    "shared": true,
                    "backlog": 500
                }
            },
            "options": {
                "title": "Crossbar.io WebSocket Testee 2/2",
                "cpu_affinity": [1]
            }
        },
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    }
                },
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8081
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket"
                        }
                    }
                },
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8082
                    }
                },
                {
                    "type": "universal",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8083
                    },
                    "rawsocket": {
                    },
                    "websocket": {
                        "ws": {
                            "type": "websocket"
                        }
                    },
                    "web": {
                        "paths": {
                            "/": {
                                "type": "static",
                                "directory": "../web",
                                "options": {
                                    "enable_directory_listing": true
                                }
                            },
                            "info": {
                                "type": "nodeinfo"
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
                {
                    "type": "class",
                    "classname": "myapp.MySession",
                    "realm": "realm1",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8080
                        },
                        "url": "ws://127.0.0.1:8080"
                    }
                }
            ]
        }
    ]
}
